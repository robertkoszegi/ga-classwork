<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express To-Do</title>
    <!-- absolute paths are specified as if index.html was in the public folder -->
    <link rel="stylesheet" href="stylesheets/style.css">
  </head>
  <body>
    <h1>Todos as of <%= time %></h1>
    <ul>
      <% todos.forEach(function(t) { %>
      <li>
        <a href="/todos/<%= t.id %>"><%= t.todo %></a> - <%= t.done ? 'done' :
        'not done' %>
        <form action="/todos/<%= t.id %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">X</button>
        </form>
      </li>
      <% }); %>
    </ul>
    <a href="/todos/new">Add To-Do</a>
  </body>
</html>
